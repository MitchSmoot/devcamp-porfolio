<div class="col-sm-3 offset-sm-1 blog-sidebar">
  <div class="sidebar-module sidebar-module-inset">
    <h4>About</h4>
    <p>Welcome to my blog!</p>
  </div>

  <%= source_helper("alert alert-info blog-sidebar-source") %>

  <div class="sidebar-module">
    <h4>Topics</h4>
    <% @sidebar_topics.each do |topic| %>
      <p><%= link_to topic.title, topic_path(topic) %></p>
    <% end %>
  </div>
  <div class="sidebar-module">
    <h4>Elsewhere</h4>
    <ol class="list-unstyled social-links">
      <li><a href="https://github.com/MitchSmoot"><%= fa_icon "github" %></a></li>
      <li><a href="http://twitter.com/MitchSmoot"><%= fa_icon "twitter" %></a></li>
      <!-- <li><a href="#"><%= fa_icon "facebook-square" %></a></li> -->
      <li><a href="https://www.instagram.com/baron_von_smooticus/"><%= fa_icon "instagram" %></a></li>
    </ol>
  </div>
</div>